<mvc:View controllerName="scm.ewm.PackingPOC.controller.Packing" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
	xmlns:f="sap.ui.layout.form" xmlns:l="sap.ui.layout" xmlns:vk="sap.ui.vk">
	<Shell id="shell">
		<App id="app">
			<pages>
				<Page id="page" title="{i18n>title}">
					<content>
						<l:Grid>
							<l:Grid>
								<l:layoutData>
									<l:GridData span="XL6 L6 M12 S12"></l:GridData>
								</l:layoutData>
								<f:Form>
									<f:layoutData>
										<l:GridData span="XL12 L12 M12 S12"></l:GridData>
									</f:layoutData>
									<f:layout>
										<f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="4" labelSpanM="4" labelSpanS="5" adjustLabelSpan="true" emptySpanXL="0" emptySpanL="0"
											emptySpanM="0" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
									</f:layout>
									<f:FormContainer>
										<f:FormElement>
											<f:label>
												<Label text="{i18n>referenceNumber}"></Label>
											</f:label>
											<f:fields>
												<Input change="onSourceInputChange">
													<layoutData>
														<l:GridData span="XL4 L4 M4 S4"></l:GridData>
													</layoutData>
												</Input>
											</f:fields>
										</f:FormElement>
										<f:FormElement>
											<f:label>
												<Label text="{i18n>productAndAccessCode}"></Label>
											</f:label>
											<f:fields>
												<Input change="onProductChange">
													<layoutData>
														<l:GridData span="XL4 L4 M4 S4"></l:GridData>
													</layoutData>
												</Input>
											</f:fields>
										</f:FormElement>
									</f:FormContainer>
								</f:Form>
							</l:Grid>
							<l:Grid>
								<l:layoutData>
									<l:GridData span="XL6 L6 M12 S12"></l:GridData>
								</l:layoutData>
								<f:Form>
									<f:layoutData>
										<l:GridData span="XL12 L12 M12 S12"></l:GridData>
									</f:layoutData>
									<f:layout>
										<f:ResponsiveGridLayout labelSpanXL="3" labelSpanL="4" labelSpanM="4" labelSpanS="5" adjustLabelSpan="true" emptySpanXL="0" emptySpanL="0"
											emptySpanM="0" emptySpanS="0" columnsXL="1" columnsL="1" columnsM="1" singleContainerFullSize="false"/>
									</f:layout>
									<f:FormContainer>
										<f:FormElement>
											<f:label>
												<Label text="{i18n>packHandlingUnit}"></Label>
											</f:label>
											<f:fields>
												<Text id="pack-hu-id-text" text="">
													<layoutData>
														<l:GridData span="XL4 L4 M4 S4"></l:GridData>
													</layoutData>
												</Text>
											</f:fields>
										</f:FormElement>
										<f:FormElement>
											<f:label>
												<Label text="{i18n>packagingMaterial}"></Label>
											</f:label>
											<f:fields>
												<Text id="packaging-material-text" text="">
													<layoutData>
														<l:GridData span="XL4 L4 M4 S4"></l:GridData>
													</layoutData>
												</Text>
											</f:fields>
										</f:FormElement>
									</f:FormContainer>
								</f:Form>
								<vk:Viewer id="viewer" enableSceneTree="false">
									<vk:layoutData>
										<l:GridData span="XL12 L12 M12 S12"></l:GridData>
									</vk:layoutData>
								</vk:Viewer>
							</l:Grid>
						</l:Grid>
					</content>
				</Page>
			</pages>
		</App>
	</Shell>
</mvc:View>